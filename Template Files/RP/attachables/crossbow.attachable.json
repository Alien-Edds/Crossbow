{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "ae_cb:crossbow",
            "materials": {
                "default": "entity_alphatest",
                "enchanted": "entity_alphatest_glint"
            },
            "textures": {
                "standby": "textures/ae_cb/items/crossbow_standby",
                "pulling0": "textures/ae_cb/items/crossbow_pulling_0",
                "pulling1": "textures/ae_cb/items/crossbow_pulling_1",
                "pulling2": "textures/ae_cb/items/crossbow_pulling_2",
                "enchanted": "textures/misc/enchanted_item_glint"
            },
            "geometry": {
                "standby": "geometry.ae_cb.crossbow_standby",
                "pulling0": "geometry.ae_cb.crossbow_pulling0",
                "pulling1": "geometry.ae_cb.crossbow_pulling1",
                "pulling2": "geometry.ae_cb.crossbow_pulling2"
            },
            "animations": {
                "wield": "animation.crossbow.wield",
                "wield_first_person_pull": "animation.crossbow.wield_first_person_pull"
            },
            "scripts": {
                "initialize": [
                    "v.has_arrow = 0.0;",
                    "v.item_name = 'minecraft:arrow';",
                    "v.shake = 0.0;",
                    "v.shake_direction = 0.0;"
                ],
                "pre_animation": [
                    "variable.charge_amount = query.main_hand_item_use_duration > 0 ? math.clamp((query.main_hand_item_max_duration - (query.main_hand_item_use_duration - query.frame_alpha + 1.0)) / 10.0, 0.0, 1.0f) : 0;",
                    "v.has_arrow = 0.0;",
                    "t.val = 0; t.i = 0; loop(27, {t.val = q.is_item_name_any('slot.inventory', t.i, v.item_name); t.val ? {v.has_arrow = 1.0; break;}; t.i = t.i+1;});",
                    "t.val = 0; t.i = 0; loop(9, {t.val = q.is_item_name_any('slot.hotbar', t.i, v.item_name); t.val ? {v.has_arrow = 1.0; break;}; t.i = t.i+1;});",
                    "q.is_item_name_any('slot.weapon.offhand', 0, v.item_name) ? {v.has_arrow = 1.0;} : {v.has_arrow = v.has_arrow;};"
                ],
                "animate": [
                    "wield",
                    {
                        "wield_first_person_pull": "query.main_hand_item_use_duration > 0.0f && c.is_first_person && v.has_arrow"
                    }
                ]
            },
            "render_controllers": [
                "controller.render.ae_cb.crossbow"
            ]
        }
    }
}